<h1>Cocktail name: <%= @cocktail.name %></h1>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<h2><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></h2>

<h4>List of ingredients</h4>
<% @cocktail.doses.each do |dose| %>
  <ul>
    <li><%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %></li>
  </ul>
<% end %>

<%= link_to "Return to cocktails", cocktails_path %>
